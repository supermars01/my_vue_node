/* 搜索 */

.search {
  width: 100%;
  height: 80rpx;
  background: rgb(255, 255, 255);
  display: flex !important;
  justify-content: flex-start;
  position: relative;
}
.search-icon{
  position: absolute;
  /* background: red; */
  top: 20rpx;
  right: 35rpx;
  width: 30rpx;
  height: 30rpx;

}
.search-icon image{
  width: 100%;
  height: 100%;
}

.search .location {
  padding: 0rpx;
  width: 170rpx;
  height: 100%;
  /* background: red; */
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}

.search .location:after {
  content: '';
  display: inline-block;
  vertical-align: 5rpx;
  width: 0;
  height: 0;
  border-left: 7rpx solid transparent;
  border-right: 7rpx solid transparent;
  border-top: 7rpx solid #000;
  margin-left: 8rpx;
}

.search navigator {
  background: rgb(255, 255, 255);
  width: 80%;
  padding: 16rpx;
}

.search .section {
  background: #f8f8f8;
  padding: 8rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: rgb(187, 187, 187);
}
/* 轮播图 */
.card-swiper swiper-item {
  padding: 30rpx 0rpx 0rpx;
}
/* 十宫格 */
.index-menu-item image {
  width: 65rpx;
  height: 65rpx;
}
/* 信息速推 */
.info_list {
  margin:20rpx 0;
  background-color: #fff;
}
.info_list .info_item  {
	line-height: 28rpx;
	padding-top: 10rpx;
	display: block;
	text-overflow:ellipsis;
	overflow:hidden;
	white-space:nowrap;
	
}
/* 广告 */
.picture {
  background-color: #fff;
}
.picture .link_avg{
  width: 100%;
  padding: 5rpx 0;
}
.picture .link_avg image {
  width: 100%;
  height: 180rpx;
}
.read_card {
  padding: 20rpx 0;
  background-color: #fff;
}
.read_card .r_title {
  
  display: block;
  font-size: 30rpx;
}
.read_card .card_border {
  margin:  0 20rpx;
  border-bottom: 1rpx solid #ccc
}
.read_card .card_border:last-child {
